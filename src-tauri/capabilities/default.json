{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/drivercom",
          "sidecar": true
        }
      ]
    },
    {
          "identifier": "shell:allow-spawn",
          "allow": [
            {
              "args": true,
              "name": "binaries/drivercom",
              "sidecar": true
            }
          ]
        },
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    "fs:write-all",
    "tcp:default"
  ]
}
