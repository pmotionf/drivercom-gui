{
  "exclude": ["dist/", "src-tauri/", ".github/", ".vscode/", ".vite/"],
  "tasks": {
    "prepare": "panda codegen",
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "serve": "deno run -A --node-modules-dir npm:vite preview",
    "tauri": "deno task prepare && tauri"
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": true,
    "exclude": ["styled-system/"]
  },
  "lint": {
    "exclude": ["styled-system/", "src/components/ui"]
  },
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@pandacss/preset-base": "npm:@pandacss/preset-base@^0.51.1",
    "lucide-solid": "npm:lucide-solid@^0.471.0",
    "~/": "./src/",
    "styled-system/": "./styled-system/",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.2",
    "@ark-ui/solid": "npm:@ark-ui/solid@^4.4.0",
    "@solid-primitives/deep": "npm:@solid-primitives/deep@^0.2.10",
    "@solidjs/router": "npm:@solidjs/router@^0.15.3",
    "@tabler/icons-solidjs": "npm:@tabler/icons-solidjs@^3.21.0",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2.2.0",
    "@tauri-apps/plugin-dialog": "npm:@tauri-apps/plugin-dialog@^2.2.0",
    "@tauri-apps/plugin-fs": "npm:@tauri-apps/plugin-fs@^2.2.0",
    "@tauri-apps/plugin-shell": "npm:@tauri-apps/plugin-shell@^2.2.0",
    "@tauri-apps/plugin-window-state": "npm:@tauri-apps/plugin-window-state@^2.2.0",
    "solid-js": "npm:solid-js@^1.9.4",
    "udsv": "npm:udsv@^0.6.0",
    "uplot": "npm:uplot@^1.6.31",
    "@pandacss/dev": "npm:@pandacss/dev@^0.51.1",
    "@park-ui/panda-preset": "npm:@park-ui/panda-preset@^0.43.1",
    "@tauri-apps/cli": "npm:@tauri-apps/cli@^2.2.4",
    "vite": "npm:vite@^6.0.7",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.10.2",
    "vite-tsconfig-paths": "npm:vite-tsconfig-paths@^5.1.4"
  }
}
